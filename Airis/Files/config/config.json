    "tts_log_dir": "Files/logs/TTS",
    "max_file_size_mb": 10,
    "backup_count": 5
  },
  "streaming": {
    "audio_queue_size": 200,
    "stream_chunk_size": 2048,
    "realtime_playback": true,
    "playback_buffer_ms": 200
  }
